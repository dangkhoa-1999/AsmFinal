@model AsmFinal.ViewModel.TopicCourseViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Course</h2>

@using (Html.BeginForm("Edit", "Topics", FormMethod.Post))
{
    @Html.HiddenFor(p => p.Topic.Id)
    @Html.LabelFor(p => p.Topic.Name)
    @Html.EditorFor(p => p.Topic.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(p => p.Topic.Name)
    @Html.LabelFor(p => p.Topic.Detail)
    @Html.EditorFor(p => p.Topic.Detail, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(p => p.Topic.Detail)
    @Html.LabelFor(p => p.Topic.Course.Name)
    @Html.DropDownListFor(p => p.Topic.CourseId, new SelectList(Model.Courses, "Id", "Name"), "Select Category Name",
        new { @class = "form-control" })
    <input type="submit" value="Submit" class="btn-primary" />
}
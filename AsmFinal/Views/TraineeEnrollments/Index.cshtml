@model IEnumerable<AsmFinal.Models.TraineeEnrollment>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("Staff"))
{
    <p>
        @Html.ActionLink("Assign Trainee to Course", "Create")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trainee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollment)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Trainee.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Enrollment.Name)
                </td>
            </tr>
        }
    </table>
}
@if (User.IsInRole("Trainee"))
{<table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(item => item.Enrollment.Name)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Enrollment.Name)
                </td>
            </tr>
        }
    </table>
}


